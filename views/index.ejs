<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <p> 
      <ul>
      <% messages.forEach(function(message) { %>
        <li> 
          <strong>User: </strong><%= message.user%>
          <br> 
          <strong>Message: </strong><%= message.text %>
          <br>
          <strong>Date: </strong><%= message.added.toLocaleDateString()%> (<%=message.added.toLocaleTimeString()%>)
        </li>
        <br>
      <% }) %>
      </ul>
    </p>
    <a href="/new">Add a new message </a>
  </body>
</html>
